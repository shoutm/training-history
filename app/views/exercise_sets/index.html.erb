<div class="max-w-2xl mx-auto p-4">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <%= link_to root_path, class: "p-2 hover:bg-gray-100 rounded" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    <% end %>
    <h1 class="text-2xl font-bold flex-1 text-center">Exercise Presets</h1>
    <%= link_to new_exercise_set_path, class: "p-2 hover:bg-gray-100 rounded" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
    <% end %>
  </div>

  <% if notice.present? %>
    <div class="mb-4 p-3 bg-green-100 text-green-700 rounded-lg"><%= notice %></div>
  <% end %>

  <% if @exercise_sets.empty? %>
    <div class="text-center py-12 text-gray-500">
      <p class="mb-4">No presets yet</p>
      <%= link_to "Create your first preset", new_exercise_set_path, class: "text-blue-500 hover:underline" %>
    </div>
  <% else %>
    <div class="space-y-4">
      <% @exercise_sets.each do |exercise_set| %>
        <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm">
          <div class="flex items-center justify-between mb-2">
            <h2 class="text-lg font-semibold"><%= exercise_set.name %></h2>
            <div class="flex gap-2">
              <%= link_to timer_with_set_path(exercise_set), class: "p-2 bg-green-500 text-white rounded-lg hover:bg-green-600" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              <% end %>
              <%= link_to edit_exercise_set_path(exercise_set), class: "p-2 bg-gray-100 rounded-lg hover:bg-gray-200" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
              <%= button_to exercise_set_path(exercise_set), method: :delete, class: "p-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200", data: { turbo_confirm: "Delete this preset?" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            </div>
          </div>
          <div class="text-sm text-gray-500 mb-2">
            <%= pluralize(exercise_set.rounds, "round") %> &bull;
            <%= pluralize(exercise_set.exercise_items.size, "exercise") %>
          </div>
          <div class="flex flex-wrap gap-2">
            <% exercise_set.exercise_items.each do |item| %>
              <span class="px-2 py-1 bg-blue-100 text-blue-700 text-sm rounded">
                <%= item.name %> (<%= item.exercise_seconds %>s/<%= item.rest_seconds %>s)
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
