<div class="nested-fields bg-gray-50 p-4 rounded-lg" data-nested-form-target="fields">
  <div class="flex items-start gap-4">
    <div class="flex-1 space-y-3">
      <div>
        <%= f.label :name, "Exercise Name", class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g. Push-ups" %>
      </div>
      <div class="flex gap-4">
        <div class="flex-1">
          <%= f.label :exercise_seconds, "Exercise (sec)", class: "block text-sm font-medium text-gray-600" %>
          <%= f.number_field :exercise_seconds, min: 5, max: 300, step: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div class="flex-1">
          <%= f.label :rest_seconds, "Rest (sec)", class: "block text-sm font-medium text-gray-600" %>
          <%= f.number_field :rest_seconds, min: 0, max: 120, step: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
    </div>
    <div class="pt-6">
      <%= f.hidden_field :position, data: { nested_form_target: "position" } %>
      <%= f.hidden_field :_destroy, value: "0", data: { nested_form_target: "destroy" } %>
      <button type="button" data-action="nested-form#remove" class="p-2 text-red-500 hover:bg-red-100 rounded-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      </button>
    </div>
  </div>
</div>
