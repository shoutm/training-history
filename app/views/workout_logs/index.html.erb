<div class="max-w-md mx-auto p-4">
  <h1 class="text-2xl font-bold text-center mb-6">Training History</h1>

  <!-- Navigation -->
  <div class="flex justify-between items-center mb-4">
    <%= link_to root_path(month: @prev_month.to_s), class: "p-2 hover:bg-gray-100 rounded" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    <% end %>
    <span class="text-xl font-semibold"><%= @current_month.strftime("%Y年 %m月") %></span>
    <%= link_to root_path(month: @next_month.to_s), class: "p-2 hover:bg-gray-100 rounded" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    <% end %>
  </div>

  <!-- Weekday headers -->
  <div class="grid grid-cols-7 gap-1 mb-2">
    <% %w[日 月 火 水 木 金 土].each_with_index do |day, i| %>
      <div class="text-center text-sm font-medium <%= i == 0 ? 'text-red-500' : (i == 6 ? 'text-blue-500' : 'text-gray-600') %>">
        <%= day %>
      </div>
    <% end %>
  </div>

  <!-- Calendar grid -->
  <div class="grid grid-cols-7 gap-1">
    <% # Empty cells for days before the first of the month %>
    <% @current_month.beginning_of_month.wday.times do %>
      <div class="aspect-square"></div>
    <% end %>

    <% # Days of the month %>
    <% (@current_month.beginning_of_month..@current_month.end_of_month).each do |date| %>
      <% completed = @workout_logs.include?(date) %>
      <% is_today = date == Date.current %>
      <% is_future = date > Date.current %>

      <%= button_to toggle_workout_path(date: date.to_s),
            method: :post,
            disabled: is_future,
            class: "aspect-square flex flex-col items-center justify-center rounded-lg transition-all
                    #{is_today ? 'ring-2 ring-blue-500' : ''}
                    #{completed ? 'bg-green-100' : 'bg-gray-50'}
                    #{is_future ? 'opacity-40 cursor-not-allowed' : 'hover:bg-gray-200 cursor-pointer'}" do %>
        <span class="text-sm <%= is_today ? 'font-bold text-blue-600' : 'text-gray-700' %>">
          <%= date.day %>
        </span>
        <% if completed %>
          <span class="text-lg">✅</span>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <!-- Stats -->
  <div class="mt-6 p-4 bg-gray-50 rounded-lg">
    <div class="text-center">
      <span class="text-3xl font-bold text-green-600"><%= @workout_logs.size %></span>
      <span class="text-gray-600"> / <%= @current_month.end_of_month.day %> 日</span>
    </div>
    <p class="text-center text-sm text-gray-500 mt-1">今月のトレーニング達成率</p>
  </div>

  <!-- Timer link -->
  <div class="mt-6 text-center">
    <%= link_to timer_path, class: "inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors" do %>
      タイマーを開始
    <% end %>
  </div>
</div>
